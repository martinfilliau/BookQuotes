<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Book.Title</MudText>
            <MudText Typo="Typo.subtitle1">@Book.Author</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudTooltip Text="Copy to clipboard as text (Markdown)">
                <MudIconButton Icon="@Icons.Material.Filled.ContentCopy"
                               Color="Color.Default"
                               OnClick="CopyToClipboard"
                               Disabled="Book.Annotations.Count == 0"/>               
            </MudTooltip>
            <MudTooltip Text="Download as text (Markdown) file">
                <MudIconButton Icon="@Icons.Material.Filled.Download"
                               Color="Color.Default"
                               OnClick="ExportQuotesMarkdown"
                               Disabled="Book.Annotations.Count == 0"/>               
            </MudTooltip>
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent>
        <MudStack Spacing="4">
        @foreach (var quote in @Book.Annotations)
        {
            <QuoteComponent Annotation="quote"></QuoteComponent>
        }
        </MudStack>

        @if (RootToc != null)
        {
            <br />
            <MudText Typo="Typo.h5">Table of content</MudText>
            <br />

            <MudStack Spacing="4">
                <ul style="margin-left: 2em;">
                    <TableOfContentsItemComponent Item="RootToc"></TableOfContentsItemComponent>
                </ul>
            </MudStack>
        }
    </MudCardContent>
</MudCard>
