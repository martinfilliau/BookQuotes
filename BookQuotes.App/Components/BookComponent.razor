<h3>@Book.Title</h3>
<p>@Book.Author</p>

<MudButton Variant="Variant.Filled" Color="Color.Primary"
           Disabled="Book.Quotes.Count == 0"
           OnClick="ExportQuotesMarkdown">Export to Markdown</MudButton>

@foreach (var quote in @Book.Quotes)
{
<QuoteComponent Quote="quote"></QuoteComponent>
}

@if (@TocItems.Count > 0)
{
    <h4>Table of content</h4>
    
@foreach (var item in @TocItems)
{
    <p>@item</p>
}
}
