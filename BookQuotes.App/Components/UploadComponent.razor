<MudGrid>
    <MudItem xs="12">
        <MudFileUpload T="IReadOnlyList<IBrowserFile>" FilesChanged="UploadFiles"
                       Accept=".epub,.xml,.annot" AppendMultipleFiles="true">
            <ActivatorContent>
                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary"
                           StartIcon="@Icons.Material.Filled.CloudUpload">
                    Upload Epub or XML files with annotations
                </MudButton>
            </ActivatorContent>
        </MudFileUpload>       
    </MudItem>
    <MudItem xs="6">
        <MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="Reset">Reset</MudButton>
    </MudItem>
    <MudItem xs="12">
        @foreach (var book in Books)
        {
            <BookComponent Book="@book"></BookComponent>
        }
    </MudItem>
</MudGrid>
